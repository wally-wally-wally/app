<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.controls.ControlsFragment">

    <ImageButton
        android:id="@+id/forwardButton"
        android:layout_width="96dp"
        android:layout_height="96dp"
        android:layout_marginTop="12dp"
        android:background="@drawable/roundedbutton_lighter"
        android:contentDescription="@string/up_facing_button"
        android:src="@drawable/ic_baseline_arrow_upward_24"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"/>

    <ImageView
        android:id="@+id/dpad"
        android:layout_width="96dp"
        android:layout_height="96dp"
        android:padding="12dp"
        android:src="@drawable/ic_baseline_add_black_24"
        app:layout_constraintTop_toBottomOf="@id/forwardButton"
        android:layout_marginTop="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent" />

    <ImageButton
        android:id="@+id/backwardButton"
        android:layout_width="96dp"
        android:layout_height="96dp"
        android:background="@drawable/roundedbutton_lighter"
        android:contentDescription="@string/down_facing_button"
        android:src="@drawable/ic_baseline_arrow_downward_24"
        app:layout_constraintTop_toBottomOf="@id/dpad"
        android:layout_marginTop="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent" />

    <ImageButton
        android:id="@+id/rightButton"
        android:layout_width="96dp"
        android:layout_height="96dp"
        android:background="@drawable/roundedbutton_lighter"
        android:contentDescription="@string/right_facing_button"
        android:src="@drawable/ic_baseline_arrow_forward_24"
        app:layout_constraintLeft_toRightOf="@id/dpad"
        android:layout_marginLeft="8dp"
        app:layout_constraintTop_toTopOf="@id/dpad"/>

    <ImageButton
        android:id="@+id/leftButton"
        android:layout_width="96dp"
        android:layout_height="96dp"
        android:background="@drawable/roundedbutton_lighter"
        android:contentDescription="@string/left_facing_button"
        android:src="@drawable/ic_baseline_arrow_back_24"
        app:layout_constraintRight_toLeftOf="@id/dpad"
        android:layout_marginRight="8dp"
        app:layout_constraintTop_toTopOf="@id/dpad" />

    <ImageButton
        android:id="@+id/rotateLeftButton"
        android:layout_width="96dp"
        android:layout_height="96dp"
        android:layout_marginLeft="40dp"
        android:layout_marginBottom="30dp"
        android:layout_marginTop="60dp"
        android:background="@drawable/roundedbutton"
        android:contentDescription="@string/rotate_left_button"
        android:rotation="-45"
        android:src="@drawable/ic_baseline_rotate_left_24"
        app:layout_constraintTop_toBottomOf="@id/backwardButton"
        app:layout_constraintStart_toStartOf="parent" />

    <ImageButton
        android:id="@+id/rotateRightButton"
        android:layout_width="96dp"
        android:layout_height="96dp"
        android:layout_marginRight="40dp"
        android:layout_marginBottom="30dp"
        android:layout_marginTop="60dp"
        android:background="@drawable/roundedbutton"
        android:contentDescription="@string/rotate_right"
        android:rotation="45"
        android:src="@drawable/ic_baseline_rotate_right_24"
        app:layout_constraintTop_toBottomOf="@id/backwardButton"
        app:layout_constraintEnd_toEndOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>