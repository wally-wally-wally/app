<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.controls.ControlsFragment">

    <ImageButton
        android:id="@+id/checkpointButton"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_margin="30dp"
        android:background="@drawable/roundedbutton_red"
        android:contentDescription="Scan marker"
        android:src="@drawable/ic_baseline_outlined_flag_24"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageButton
        android:id="@+id/forwardButton"
        android:layout_width="96dp"
        android:layout_height="96dp"
        android:background="@drawable/roundedbutton_lighter"
        android:contentDescription="Up-facing button"
        android:src="@drawable/ic_baseline_arrow_upward_24"
        app:layout_constraintTop_toBottomOf="@id/checkpointButton"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"/>

    <ImageView
        android:id="@+id/dpad"
        android:layout_width="96dp"
        android:layout_height="96dp"
        android:padding="12dp"
        android:src="@drawable/ic_baseline_add_black_24"
        app:layout_constraintTop_toBottomOf="@id/forwardButton"
        android:layout_marginTop="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent" />

    <ImageButton
        android:id="@+id/backwardButton"
        android:layout_width="96dp"
        android:layout_height="96dp"
        android:background="@drawable/roundedbutton_lighter"
        android:contentDescription="Down-facing button"
        android:src="@drawable/ic_baseline_arrow_downward_24"
        app:layout_constraintTop_toBottomOf="@id/dpad"
        android:layout_marginTop="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent" />

    <ImageButton
        android:id="@+id/rightButton"
        android:layout_width="96dp"
        android:layout_height="96dp"
        android:background="@drawable/roundedbutton_lighter"
        android:contentDescription="Right-facing button"
        android:src="@drawable/ic_baseline_arrow_forward_24"
        app:layout_constraintLeft_toRightOf="@id/dpad"
        android:layout_marginLeft="8dp"
        app:layout_constraintTop_toTopOf="@id/dpad"/>

    <ImageButton
        android:id="@+id/leftButton"
        android:layout_width="96dp"
        android:layout_height="96dp"
        android:background="@drawable/roundedbutton_lighter"
        android:contentDescription="Left-facing button"
        android:src="@drawable/ic_baseline_arrow_back_24"
        app:layout_constraintRight_toLeftOf="@id/dpad"
        android:layout_marginRight="8dp"
        app:layout_constraintTop_toTopOf="@id/dpad" />

    <ImageButton
        android:id="@+id/rotateLeftButton"
        android:layout_width="96dp"
        android:layout_height="96dp"
        android:layout_marginLeft="40dp"
        android:layout_marginBottom="30dp"
        android:background="@drawable/roundedbutton"
        android:contentDescription="Rotate left button"
        android:rotation="-45"
        android:src="@drawable/ic_baseline_rotate_left_24"
        app:layout_constraintBottom_toTopOf="@id/cancelTaskButton"
        app:layout_constraintStart_toStartOf="parent" />

    <ImageButton
        android:id="@+id/rotateRightButton"
        android:layout_width="96dp"
        android:layout_height="96dp"
        android:layout_marginRight="40dp"
        android:layout_marginBottom="30dp"
        android:background="@drawable/roundedbutton"
        android:contentDescription="Rotate right"
        android:rotation="45"
        android:src="@drawable/ic_baseline_rotate_right_24"
        app:layout_constraintBottom_toTopOf="@id/confirmTaskButton"
        app:layout_constraintEnd_toEndOf="parent" />

    <LinearLayout
        android:id="@+id/cancelTaskButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        android:clickable="true"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:padding="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <ImageView
            android:id="@+id/cancelTaskImage"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:background="@drawable/roundedbutton_red"
            android:contentDescription="Cancel button"
            android:src="@drawable/ic_baseline_arrow_return_24" />

        <TextView
            android:id="@+id/cancelTaskText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:text="Cancel"
            android:textAlignment="gravity"
            android:textSize="26sp"
            android:textStyle="bold" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/confirmTaskButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        android:clickable="true"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:padding="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <TextView
            android:id="@+id/confirmTaskText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="8dp"
            android:text="Confirm"
            android:textAlignment="gravity"
            android:textSize="26sp"
            android:textStyle="bold" />

        <ImageView
            android:id="@+id/confirmImage"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:background="@drawable/roundedbutton_green"
            android:contentDescription="Cancel button"
            android:src="@drawable/ic_baseline_check_24" />
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>